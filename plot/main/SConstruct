import os, sys, string
sys.path.append('../..')
import configure

progs = '''
box contour contour3 dots graph graph3 grey grey3 plas pldb plotrays
thplot vplotdiff wiggle
'''

try:
    Import('env root libdir bindir')
    env = env.Clone()
    alias = {'grey':'byte','grey3':'cubeplot'}
except:
    env = configure.Debug()
    root = None
    SConscript('../lib/SConstruct')

env.Prepend(CPPPATH=['../../include'],
            LIBPATH=['../../lib'],
            LIBS=['rsfplot','rsf'])

mains = Split(progs)

docalias={}
for prog in mains:
    main = env.Program(prog + '.c')
    if root:
         env.Install(bindir,main[0])
         if prog in alias.keys():
	       copy = string.replace(str(main[0]),prog,alias[prog])
               env.InstallAs(os.path.join(bindir,copy),main[0])
               doc = os.path.splitext(copy)[0]
               docalias[doc] = 'sf'+prog

######################################################################
# SELF-DOCUMENTATION
######################################################################
if root:
    main = 'sfplot.py'
    
    docs = map(lambda prog: env.Doc(prog),mains)
    env.Depends(docs,'#/framework/rsfdoc.py')
    doc = env.RSF_Docmerge(main,docs,alias=docalias)
    env.Install(libdir,doc)



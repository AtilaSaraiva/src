import sys, os
import sfconfigure

sources = Split('rsf cub vai')

Import('env')
env = env.Clone()


env.Tool( 'rsfc' ) # paths
env.Tool( 'rsfcxx') # compiler and flags

ccfiles = map(lambda x: x+'.cc',sources)
hhfiles = map(lambda x: x+'.hh',sources)

lib = env.StaticLibrary('rsf++',ccfiles)

env.InstallLibrary(lib)
env.InstallInclude(hhfiles)

for ccfile in ['getpar','file']:
    test = 'Test' + ccfile + '.cc'
    env.Program([test,lib])


        

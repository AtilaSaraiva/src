import os, sys, glob, string

progs = '''
wigb
'''

Import('env')
env = env.Clone()


env.Tool('rsfc')
env.Tool('rsfcc')

src = Glob('[a-z]*.c')

if Tool('x11').exists( env ):  
    env.Tool('x11')
    env.Append( LIBS=['su'],
                LIBPATH=['../lib'],
                CPPPATH=['../lib'] )
                
    objects = []
    for source in src:
        inc = env.Include(source,prefix='')
        obj = env.StaticObject(source)
        env.Depends(obj,inc)
        objects.append( obj )

mains = Split(progs)

for prog in mains:
    if Tool('x11').exists( env ):
        sources = ['X' + prog]
#        Depends(env,sources,'X'+prog)
        
        main = env.Program(prog,[map(lambda x: x + '.c',sources)+objects], PROGPREFIX='sf' )
    else:
        main = env.Place(prog,None,var='XINC and XLIBPATH')
        
    
    env.InstallExecutable(main[0])

######################################################################
# SELF-DOCUMENTATION
######################################################################
if env.get('root',True):
    main = 'sfsuplot.py'

    if Tool('x11').exists( env ):
        docs = map(lambda prog: env.Doc(prog,'X' + prog),mains)
        env.Depends(docs,'#/framework/rsfdoc.py')
    else:
        docs = []

    doc = env.Docmerge(main,docs)
    env.InstallLibrary(doc)
#####################################################################



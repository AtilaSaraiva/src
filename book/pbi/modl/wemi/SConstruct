from rsfproj import *

private = {'login':os.environ.get('BEG_LOGIN'),
           'password':os.environ.get('BEG_PASSWORD'),
           'server':os.environ.get('BEG_SERVER')}

for file in ('vp','vs','density'):
    bin = file + '.bin'    
    Fetch(bin,'wemi',private)
    Flow(file,bin,
         '''
         echo in=$SOURCE
         n1=2401 o1=0 d1=0.01 label1=z unit1=kft
         n2=1981 o2=0 d2=0.01 label2=x unit2=kft
         data_format=native_float |
         scale dscale=%g
         ''' % (0.001,1)[file=='density'],stdin=0)
    Result(file,
           '''
           grey title=%s color=j allpos=y scalebar=y           
           ''' % string.capitalize(file))
    
End()

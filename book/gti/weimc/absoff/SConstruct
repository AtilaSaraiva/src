from rsfproj import *
import spmig
sys.path.append('.')
import itest

# ------------------------------------------------------------
par = {
    'xcig':5000,
    'zcig':2000,
#    
    'nx':1000,  'ox':0,    'dx':10,
    'nh':801,   'oh':-4000,'dh':10,
    'ns':1,     'os':5000, 'ds':40, 'js':1,'fs':0,
    'nz':250,   'oz':0,    'dz':10,
    'nt':1000,  'ot':0,    'dt':0.008,
    'nw':100,   'ow':1,'jw':3,
    'vel2':2000,
    #
    'verb':'y','eps':0.01,'nrmax':1,'dtmax':0.00005,
    'tmx':16,'tmy':0,'pmx':0,'pmy':0
    }
# ------------------------------------------------------------
#point2=0.5 point1=0.6

def igrey2(custom):
    return '''
    grey labelrot=n title="" pclip=100 labelsz=5 %s
    ''' % custom
def igrey3(custom,custom2):
    return '''
    transp plane=12 | transp plane=23 |
    byte gainpanel=all %s |
    grey3 labelrot=n title="" flat=n labelsz=5
          point2=0.6 point1=0.8
          label1="h\s80 \_x\^\s100 (m)"
          label2="h\s80 \_z\^\s100 (m)"
          label3="z (m)"
          frame1=50 frame2=50 frame3=40 labelsz=6 %s
    ''' % (custom,custom2)

DLABEL = ' label1="t (s)" label2="h (m)" '
XLABEL = ' label1="z (m)" label2="x (m)" '
OLABEL = ' label1="z (m)" label2="h (m)" grid=y '
ALABEL = ' label1="z (m)" label2="\F10 q\F3 (\^o\_)" grid=y'
#ALABEL = ' label1="depth (m)" label2="tan \F10 q\F3 " grid=y '


SCR = ' screenratio=0.5 screenht=7'
# ------------------------------------------------------------

# build velocity models
itest.model(par)

# generate data
for wtype in ('p'):                      # wave type
    for DIP in ('00','30'):              # reflector dip
        for ANG in ('00','30'):          # incidence angle
            
            exp = wtype + DIP + ANG      # experiment
            
            dat = 'dat-' + exp
            itest.data(wtype,dat,DIP,ANG,par)
            Result(dat,'window max1=5 |'
                   + igrey2('pclip=100'+SCR+DLABEL))

            for imco in ('x','h','m'):   # imaging condition

                img = 'img-' + exp + imco
                cig = 'cig-' + exp + imco
                itest.migrate(wtype,imco,dat,img,cig,par)
                Result(img,'window n4=1 min4=0 | transp |'
                       + igrey2('screenratio=0.25 screenht=3.5'+XLABEL))
        
                off = 'off-' + exp + imco
                ang = 'ang-' + exp + imco
                hlf = 'hlf-' + exp + imco
                    
                if(imco == 'x'):
                    Flow(off,cig,'window n1=1 min1=%(xcig)g' % par)
                    
                else:
                    if(imco == 'h'):
                        Flow(hlf,cig,'window n1=1 min1=%(xcig)g' % par)
                        Flow(off,hlf,
                             '''
                             window f2=1 | pad end2=1 |
                             reverse which=2 |
                             cat axis=2 space=n ${SOURCES[0]}
                             ''')
                    else:
                        cub = 'cub-' + exp + imco
                        Result(cub,cig,
                               'window n1=1 min1=%(xcig)g min3=1600 max3=2400 | ' % par +
                               igrey3('',''))

                        Flow(hlf,cig,
                             '''
                             window squeeze=n n1=1 min1=%(xcig)g |
                             stack | transp | stack |
                             transp plane=12 |
                             transp plane=23 |
                             transp plane=34 |
                             window squeeze=n |
                             off2abs verb=y |
                             transp 
                             ''' % par)
                        Flow(off,hlf,
                             '''
                             window f2=1 | pad end2=1 |
                             reverse which=2 |
                             cat axis=2 space=n ${SOURCES[0]}
                             ''')
                    
                Result(off,igrey2('screenratio=2'+OLABEL))
                Flow(ang,off,
                     '''
                     slant adj=y p0=-1.5 np=201 dp=0.015 |
                     tan2ang a0=-60 na=241 da=0.50
                     ''')
                Result(ang,igrey2('screenratio=1'+ALABEL))

            # END imco

        # END ang
        
    # END dip

# END wtype

Flow('hx00','cig-p0030m','window n1=1 min1=5000 n6=1 min6=0')
Flow('hz00','cig-p0030m','window n1=1 min1=5000 n4=1 min4=0')
Result('hall00','hx00 hz00','cat axis=3 space=n ${SOURCES[1]} | grey gainpanel=a')

Flow('hx30','cig-p3030m','window n1=1 min1=5000 n6=1 min6=0')
Flow('hz30','cig-p3030m','window n1=1 min1=5000 n4=1 min4=0')
Result('hall30','hx30 hz30','cat axis=3 space=n ${SOURCES[1]} | grey gainpanel=a')



#     ''' % par)
#Plot('intCC','transp |' + cgrey('pclip=100',par))
#Result('intCC','intCC ray wft','Overlay')

# ------------------------------------------------------------
# slowness in CC
Flow('sloCC','vel',
     '''
     math output="1/input" |
     transp |
     spray axis=2 n=1 o=0 d=1 |
     put label1=x label2=y label3=z
     ''')
# slowness in RC
Flow('sloRC','sloCC cos',
     '''
     window |
     c2r rays=${SOURCES[1]} adj=n |
     put label1=g label2=t label3=
     ''')
Result('sloRC','transp |' + rgrey('pclip=100 color=j allpos=y bias=0.5',par))

# coordinate system coefficients (A,B,M=mask) and references (A,B)
Flow(['abmRC','abrRC'],['cos','sloRC'],
     '''
     rweab naref=1 nbref=1
     slo=${SOURCES[1]} abr=${TARGETS[1]}
     ''')

Plot('aRC','abmRC','window n3=1 f3=0 | transp |'+ rgrey('pclip=100 color=F allpos=n bias=1',par))
Plot('bRC','abmRC','window n3=1 f3=1 | transp |'+ rgrey('pclip=100 color=F allpos=y bias=1',par))
Plot('mRC','abmRC','window n3=1 f3=2 | transp |'+ rgrey('pclip=100 color=j allpos=y',par))
Result('abmRC','aRC bRC mRC','OverUnderAniso')

# ------------------------------------------------------------

# time data CC: (t,x)
Flow('datCC',None,
     '''
     spike nsp=1 mag=1
     n1=%(nT)d o1=%(oT)g d1=%(dT)g k1=350
     n2=%(nx)d o2=%(ox)g d2=%(dx)g k2=%(spx)d l2=%(spx)d |
     ricker1 frequency=5 |
     smooth rect2=1 |
     put label1=t label2=x
     ''' % par )
Plot  ('datCC','grey pclip=100 wanttitle=n')
Result('datCC','grey pclip=100 wanttitle=n')

# frequency data RC: (g,w)
Flow('frqCC','datCC',
     '''
     fft1 opt=n inv=n |
     window squeeze=n min1=%(ow)g j1=1 n1=%(nw)d |
     transp |
     spray axis=2 n=1 o=0 d=1 | 
     put label1=x label2=y label3=w
     ''' % par)
Plot  ('frqCC','window | real | transp | grey pclip=100')
Result('frqCC','window | real | transp | grey pclip=100')

# ------------------------------------------------------------

# time data RC: (t,g)
Flow('datRC',None,
     '''
     spike nsp=1 mag=1
     n1=%(nT)d o1=%(oT)g d1=%(dT)g k1=350
     n2=%(ng)d o2=%(og)g d2=%(dg)g k2=%(spg)d l2=%(spg)d |
     ricker1 frequency=5 |
     smooth rect2=1 |
     put label1=t label2=g
     ''' % par )
Plot  ('datRC','grey pclip=100 wanttitle=n')
Result('datRC','grey pclip=100 wanttitle=n')

# frequency data RC: (g,w)
Flow('frqRC','datRC',
     '''
     fft1 opt=n inv=n |
     window squeeze=n min1=%(ow)g j1=1 n1=%(nw)d |
     transp |
     put label1=g label2=w
     ''' % par)
Plot  ('frqRC','real | transp | grey pclip=100')
Result('frqRC','real | transp | grey pclip=100')

# ------------------------------------------------------------

# WEM image CC: (z,x)
zomig.image('imgCC','sloCC','frqCC',par)
Plot('imgCC','window | transp |' + cgrey('title=imgCC',par))
Result('imgCC',['imgCC','ray','wft'],'Overlay')

# ------------------------------------------------------------

for i in (['SSF']):
    if(i=='F15'): method='method=0 c1=0.50   c2=0.00'
    if(i=='F45'): method='method=0 c1=0.50   c2=0.25'
    if(i=='F60'): method='method=0 c1=0.4761 c2=0.3767'
    if(i=='SSF'): method='method=1'
    if(i=='FFD'): method='method=2 c1=0.50   c2=0.00'
    if(i=='PSC'): method='method=3 c1=0.50   c2=0.00'
    
    migRC = 'migRC' + '-' + i
    migCC = 'migCC' + '-' + i

    # RWE image RC: (t,g)
    Flow(migRC,['frqRC','abmRC','abrRC'],
         '''
         rwezomig ntap=0 %s
         abm=${SOURCES[1]}
         abr=${SOURCES[2]} |
         put label1=g label2=t
         ''' % method)
    Plot  (migRC,'window | transp |' + rgrey('title=%s',par) % i)
    Result(migRC,'window | transp |' + rgrey('title=%s',par) % i)

    # image CC: (z,x)
    Flow(migCC,[migRC,'cos'],
         '''
         c2r rays=${SOURCES[1]} adj=y linear=n 
         nsz=3 nsx=3
         a2n=%(nz)d a2o=%(oz)g a2d=%(dz)g
         a1n=%(nx)d a1o=%(ox)g a1d=%(dx)g |
         put label1=z label2=x
         ''' % par)
    Plot(migCC,'window | transp |' + cgrey('title=%s',par) % i)
    Result(migCC,[migCC,'ray','wft'],'Overlay')

    # ------------------------------------------------------------

Result('dcomp','datCC datRC','Movie')
Result('fcomp','frqCC frqRC','Movie')
Result('icomp','imgCC migCC-SSF','Movie')

End()

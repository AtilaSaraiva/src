from rsftex import *
import os

os.environ['PSTEXPENOPTS'] = 'color=y fat=7 famult=7 invras=y'

packages = '''
amsmath,
amsfonts,
amssymb,
hyperref,
color,
tikz
'''

inc = ''

final = ARGUMENTS.get('final', 0)
if int(final) is 1:
    End(use=packages,options='manuscript',include=inc)
elif int(final) is 2:
    End(use=packages,options="twocolumn",include=inc)
elif int(final) is 3:
    End(use=packages,options="manuscript,revised",include=inc)
else:
    End(use=packages,include=inc)

from rsfproj import *

## 
 # Sigsbee 2B
##

PRFX = 'sigsbee2b_'
SUFX = '.segy' 

for c in ('migration_velocity','stratigraphy','reflection_coefficients'):

    if(c=='migration_velocity'):
        v='vmig2B'
        o=10025
        d=37.5
    if(c=='stratigraphy'):
        v='vstr2B'
        o=10000
        d=25
    if(c=='reflection_coefficients'):
        v='reflectionCoefficientsB'
    h = c + 'head'
    t = PRFX + c + SUFX
    Fetch(t,'sigsbee')

    Flow([v,h],t,
         '''
         segyread tape=$SOURCE tfile=${TARGETS[1]} |
         put
         o1=0  d1=25   label1=z unit1=ft
         o2=%f d2=%f   label2=x unit2=ft
         ''' %(o,d) ,stdin=0)
    if(c=='migration_velocity'):
        Result(v,v,'grey color=j scalebar=y allpos=y title=Migration\ Velocity')
    if(c=='stratigraphy'):
        Result(v,v,'grey color=j scalebar=y allpos=y title=Stratigraphic\ Velocity')
    if(c=='reflection_coefficients'):
        Result(v,v,'grey color=i scalebar=y minval=0 maxval=.1 title=Reflection\ Coefficients')
End()


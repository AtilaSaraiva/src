#########################
#   Pluto Shot Data     #
#########################
from rsfproj import *

#------- Define Variables and Filenames ------#
dataOne = 'P15shots150f_endon_0ph-1stHlf.SEGY'
dataTwo = 'P15shots150f_endon_0ph-2ndHlf.SEGY'
#------------- Import Data -------------------#
#-- Uses ftp program Fetch
#Fetch(dataOne,'pluto')
#Fetch(dataTwo,'pluto')



#----------  Convert Data --------------------#
Flow('dataOneRSF',dataOne,'segyread tape=$SOURCE')
Flow('dataTwoRSF',dataTwo,'segyread tape=$SOURCE') 


#----------  Cube Data -----------------------#
Flow('dataOneCubedRSF','dataOneRSF',
	'''
	put
	n1=1126	d1=0.008	o1=0		label1=z unit1=sec 
	n2=350	d2=75		o2=-2700	label2=x unit2=ft
	n3=347	d3=1		o3=0		label3=Shot
	''')
     #put label1=z unit1=ft*1000 d1=0.025 o1=0
     #    label2=x unit2=ft*1000 d2=0.025 o2=-34.875 |

Flow('dataTwoCubedRSF','dataTwoRSF',
	'''
	put
	n2=350 n3=347
	d2=1 d3=1
	o1=0 o2=0 o3=347
	''')
#----------  Concatinate datasets ------------#
Flow('dataRSF',['dataOneCubedRSF','dataTwoCubedRSF'],
	'''
	cat ${SOURCES[0:1]} axis=3 |
	put 
	n1=1126  	d1=0.008    o1=0		label1=z unit1=sec
    n2=350    	d2=4.5      o2=-270		label2=x unit2=ft
	''')
#   n3=694      d3=1        o3=0		label3=Shot
#	n4=694		d4=2		o4=0
#	n5=694		d5=2		o5=0
#	n6=694		d6=2		o6=0
#	n7=			d7=			o7=
#	n8=			d8=			o8=
#	n9=			d9=			o9=
#	''')

#---------- Make Snapsot ---------------------#
Result('dataRSF','dataRSF','window $SOURCE j3=20 | grey gainpanel=a title=Pluto\ Model')
#Result('dataRSF','dataRSF','window $SOURCE n3=1 f3=60 | grey title=Shot\ 60')
End()

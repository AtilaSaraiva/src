# every10shot  You can ask for 03=370 n3=151 d3=100
Flow(['every10shot.rsf','every10shot_hdr.rsf'],
     ['../fetch/shots-receivers-23900.rsf','../fetch/shots-receivers-23900_hdr.rsf'],
     '''
     sftahread \
          input=${SOURCES[0]} \
	  verbose=1 \
     | sftahwrite \
          output=${TARGETS[0]} \
          label2="gx" o2=0 n2=901 d2=25 \
          label3="sx" o3=3700 n3=16 d3=1000 \
	  verbose=1
     ''',stdout=0, stdin=0)

Result('every10shot',
       'sfpow pow1=1.5 | sfgrey title="every10shot"')

from rsf.tex import *
import os

Paper('seminar_june2016',lclass='beamer',
    use='hyperref,listings,multimedia,animate,verbatim,amsmath,amsfonts,amssymb,mathrsfs,subfigure,longtable',
    color='TRIc-11 ORTc-11 ORTc-11-f freq_p_x',
    include=r'''

    % metropolis
    \usetheme{metropolis}
    \usepackage{appendixnumberbeamer}

    \usepackage{booktabs}
    \usepackage[scale=2]{ccicons}

    \usepackage{pgfplots}
    \usepgfplotslibrary{dateplot}

    \usepackage{xspace}
    \newcommand{\themename}{\textbf{\textsc{metropolis}}\xspace}

    \usepackage{tikz}
    \usetikzlibrary{positioning,shapes,shadows,arrows}
    \usepackage[orientation=landscape,size=custom,width=16,height=9.75,scale=0.5,debug]{beamerposter}
    ''')


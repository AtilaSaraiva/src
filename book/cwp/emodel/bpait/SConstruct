## 
 # bpait
 ##
 
from rsfproj import *
import fdmod, emodel

# ------------------------------------------------------------
par = {
    'ot':0,      'dt':0.00050, 'nt':10000, 'lt':'t', 'ut':'s',
    'ox':14,     'dx':0.01250, 'nx':601,  'lx':'x', 'ux':'km',
    'oz':2,      'dz':0.00625, 'nz':601,  'lz':'z', 'uz':'km',
    'og':-90,    'dg':0.1,     'ng':1800,  'lg':'g', 'ug':'deg',
    'kt':250,'jsnap':1000,
    'xsou':16,
    'frq':8,'nb':250,'nbell':5,
    'scalebar':'n',
    'wweight':10,
    'wclip':0.5,
    'ompnth':4
    }
fdmod.param(par)
par['zsou']=par['oz']

velo="bpaitvel.hh"
Fetch(velo,"bpait")

# ------------------------------------------------------------
Flow('vp',velo,
     '''
     dd form=native |
     put
     o1=0 d1=%(dz)g o2=0 d2=%(dx)g
     label1=%(lz)s label2=%(lx)s unit1=%(uz)s unit2=%(ux)s |
     scale rscale=0.001 |
     window min1=%(oz)g n1=%(nz)d min2=%(ox)g n2=%(nx)d
     ''' % par)

# ------------------------------------------------------------
emodel.execute('vp',par)
# ------------------------------------------------------------

End()

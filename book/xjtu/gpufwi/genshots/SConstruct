from rsf.proj import *

Fetch('marmvel.hh','marm')

Flow('vel','marmvel.hh',
	'''
	dd form=native | window j1=3 j2=3 | 
     	put label1=Depth  unit1=m label2=Lateral unit2=m
	''')

Plot('vel',
	'''
	grey color=j mean=y scalebar=y bartype=v barlabel="V" 
	barunit="m/s"	screenratio=0.45 
	''')

# smoothed velocity model, it will be the initial model for FWI   
Flow('smvel','vel','smooth repeat=10 rect1=10 rect2=20')
Plot('smvel',
     '''
     grey title="Smoothed Marmousi model" wantitle=y allpos=y color=j
     pclip=100 scalebar=y bartype=v barlabel="V" barunit="m/s"
	screenratio=0.45 
     ''' )

Result('all','vel smvel','TwoRows')


Flow('shots','vel',
	'''
	sfgenshots csdgather=n fm=10 dt=0.001 ns=20 ng=737 nt=3000
	sxbeg=15 szbeg=1 jsx=37 jsz=0 gxbeg=0 gzbeg=1 jgx=1 jgz=0
	''')
Result('shots','grey color=g ')
Flow('vsnaps grads objs','smvel shots',
	'''
	sfgpufwi shots=${SOURCES[1]} grads=${TARGETS[1]} 
	objs=${TARGETS[2]} niter=20
	''')
Result('vsnaps',
	'''
	grey title="Updated velocity" allpos=y color=j pclip=100 
	scalebar=y bartype=y barlabel="V" barunit="m/s" screenratio=0.45
	''')

Result('grads','grey title="Updated gradient"')

Result('objs',
	'''
	put n2=1|
	graph title="Misfit function" dash=0 plotfat=5 label1=Iteration 
	label2=Objective grid=y yreverse=n
	''')


End()

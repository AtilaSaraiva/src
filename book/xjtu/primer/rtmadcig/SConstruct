from rsf.proj import *

Flow('vel0',None,
     	'''
     	math output=1.5 n1=50 n2=200 d1=0.005 d2=0.005
     	label1=x1 unit1=km label2=x2 unit2=km 
     	''')

Flow('vel1',None,
     	'''
     	math output=1.5 n1=50 n2=200 d1=0.005 d2=0.005
     	label1=x1 unit1=km label2=x2 unit2=km 
     	''')
Flow('vel2',None,
     	'''
     	math output=1.8 n1=50 n2=200 d1=0.005 d2=0.005
     	label1=x1 unit1=km label2=x2 unit2=km 
     	''')
Flow('vel3',None,
     	'''
     	math output=1.8 n1=50 n2=200 d1=0.005 d2=0.005
     	label1=x1 unit1=km label2=x2 unit2=km 
     	''')
Flow('vel',['vel0','vel1','vel2','vel3'], 'cat axis=1 ${SOURCES[1:4]}')
Result('vel','grey title="velocity model: 3 layers" color=j scalebar=y')

Flow('adcig vecx vecz','vel',
	'''
	rtmadcig vecx=${TARGETS[1]} vecz=${TARGETS[2]} nb=20 noa=45 
	nt=1500 kt=250 fm=25 dt=0.001 ns=1 ng=200 csdgather=n
	sxbeg=100 szbeg=1 jsx=40 jsz=0 
	gxbeg=0 gzbeg=1 jgx=1 jgz=0 
	vmute=1.50
	''')

Result('adcig','grey label1=Depth unit1=km label2=angle unit2=degree scalebar=y')
Result('image','adcig','stack|grey label1=Depth unit1=km label2=angle unit2=degree scalebar=y')


Plot('vecx','grey title=vectorx scalebar=y color=j')
Plot('vecz','grey title=vectorz scalebar=y color=j')
Result('vecxz','vecx vecz','SideBySideIso')


End()

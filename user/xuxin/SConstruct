import os, sys

try:
    import bldutil
    glob_build = True
    srcroot = '../..'
    Import('env bindir pkgdir')
except:
    glob_build = False
    srcroot = os.environ.get('RSFSRC', '../..')
    sys.path.append(os.path.join(srcroot,'framework'))
    import bldutil
    env = bldutil.Debug()
    bindir = pkgdir = None
    
targets = bldutil.UserSconsTargets()

targets.c = '''
integral1 pseudodepth swapbyte raytest
'''

if env.get('LAPACK'):
	env.Append(LIBS=['lapack'])
else:
	targets.c.replace('pseudodepth','')

targets.build_all(env, glob_build, srcroot, bindir, pkgdir)
